#!/usr/bin/env bash
# Create an RSA key pair with the name 'school', 4096 bits, and protected by passphrase 'betty'

# Ensure the .ssh directory exists
mkdir -p ~/.ssh

# Generate the RSA key pair with 4096 bits and passphrase 'betty'
ssh-keygen -t rsa -b 4096 -C "Generated key pair for school" -f ~/.ssh/school -N "betty"
