# Get the ID of the running container
docker ps

# Connect to the running container using its ID
docker exec -it CONTAINER_ID /bin/bash

# Check Apache status (optional)
service apache2 status

# Navigate to the directory where Apache serves files (usually /var/www/html/)
cd /var/www/html/

# Create or edit the index.html file to contain "Hello Holberton"
echo "Hello Holberton" > index.html

# Exit the container shell
exit

# Test the Apache server by curling the mapped port
curl 0:8080
