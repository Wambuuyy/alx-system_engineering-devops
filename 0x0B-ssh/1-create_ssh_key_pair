#!/usr/bin/env bash
# Bash script to create an RSA key pair named 'school' with 4096 bits and protected by the passphrase 'betty'

# Create the .ssh directory if it doesn't exist
mkdir -p ~/.ssh

# Generate the RSA key pair
ssh-keygen -t rsa -b 4096 -C "RSA key pair for school" -f ~/.ssh/school -N "betty"

# Check if the key pair generation was successful
if [ $? -eq 0 ]; then
	echo "Generating public/private rsa key pair..."
	echo "Your identification has been saved in ~/.ssh/school."
	echo "Your public key has been saved in ~/.ssh/school.pub."
	echo "The key fingerprint is:"
	ssh-keygen -lf ~/.ssh/school
	echo "The key's randomart image is:"
	ssh-keygen -lvf ~/.ssh/school
else
	echo "Error: RSA key pair generation failed."
fi
